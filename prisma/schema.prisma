generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  cpf       String   @unique
  email     String   @unique
  phone     String?
  birthDate DateTime
  password  String
  verified  Boolean  @default(false) // flag do CPF verificado
}
